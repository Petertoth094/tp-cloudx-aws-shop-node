{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@interfaces/*": ["interfaces/*"],
      "@functions": ["functions/index.ts"],
      "@functions/*": ["functions/*"],
      "@mocks/*": ["mocks/*"],
      "@schema/*": ["schema/*"],
      "@utils/*": ["utils/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": false
  }
}
